{
  "name": "@brainstorming/root",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf ./node_modules **/**/node_modules **/*/dist",
    "format": "prettier --write \"**/*.{js,ts,cjs,tsx,jsx,scss,html,yaml,md,json}\" --ignore-path .prettierignore",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "markdownlint": "^0.31.1",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.5.0",
    "react-devtools": "^4.28.5",
    "rimraf": "^5.0.7",
    "rollup-plugin-graph": "^2.0.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.6",
    "terser": "^5.31.1",
    "typescript": "^5.5.2",
    "vite": "^4.5.3"
  },
  "packageManager": "pnpm@9.0.2",
  "engines": {
    "node": "^22.8.0",
    "pnpm": "^9.0.2"
  }
}
