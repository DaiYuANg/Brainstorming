{
  "name": "@brainstorming/root",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf ./node_modules **/**/node_modules **/*/dist",
    "format": "prettier --write \"**/*.{js,ts,cjs,tsx,jsx,scss,html,yaml,md,json}\" --ignore-path .prettierignore",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },

  "devDependencies": {
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "markdownlint": "^0.31.1",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-packagejson": "^2.4.6",
    "react-devtools": "^4.28.5",
    "rimraf": "^5.0.5",
    "rollup-plugin-graph": "^2.0.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.69.5",
    "terser": "^5.24.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  },
  "engines": {
    "node": "20.9.0",
    "pnpm": "^8.9.2"
  }
}
